<% layout('layout') %>

<div class="tickets-container">
    <div class="tickets-header">
        <h1>Manage Tickets</h1>
        <p class="subtitle">View and manage all support tickets</p>
    </div>

    <div class="table-container">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Subject</th>
                    <th>Status</th>
                    <th>Help Topic</th>
                    <th>Location</th>
                    <th>Type</th>
                    <th>Assigned To</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket => { %>
                    <tr>
                        <td><%= ticket.ticketId %></td>
                        <td><%= ticket.subject %></td>
                        <td>
                            <span class="status-badge status-<%= ticket.status.toLowerCase().replace(' ', '-') %>">
                                <%= ticket.status %>
                            </span>
                        </td>
                        <td><%= ticket.helpTopic %></td>
                        <td><%= ticket.location %></td>
                        <td><%= ticket.type %></td>
                        <td><%= ticket.assigned_admin_name || 'Unassigned' %></td>
                        <td><%= new Date(ticket.createdAt).toLocaleString() %></td>
                        <td>
                            <a href="/admin/tickets/<%= ticket.id %>" class="btn-view">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<style>
    .tickets-container {
        padding: 20px;
        background: #f8f9fa;
    }

    .tickets-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .tickets-header h1 {
        color: #1f6a72;
        margin-bottom: 10px;
        font-size: 2.5em;
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .subtitle {
        color: #666;
        font-size: 1.2em;
        font-weight: 500;
    }

    .table-container {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
    }

    .styled-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 15px;
        overflow: hidden;
    }

    .styled-table thead th {
        background: linear-gradient(135deg, #2c3e50, #34495e);
        color: white;
        font-weight: 600;
        padding: 18px 20px;
        text-align: left;
        font-size: 1.1em;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .styled-table tbody td {
        padding: 18px 20px;
        border-bottom: 1px solid #e9ecef;
        color: #2c3e50;
        font-weight: 500;
    }

    .styled-table tbody tr {
        transition: all 0.3s ease;
    }

    .styled-table tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    .styled-table tbody tr:hover {
        background-color: #f1f5f9;
        transform: scale(1.01);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.9em;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-open {
        background-color: #e3f2fd;
        color: #1976d2;
    }

    .status-in-progress {
        background-color: #fff3e0;
        color: #f57c00;
    }

    .status-closed {
        background-color: #e8f5e9;
        color: #388e3c;
    }

    .btn-view {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #1f6a72;
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-view:hover {
        background: #185057;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 768px) {
        .tickets-container {
            padding: 15px;
        }

        .table-container {
            padding: 15px;
        }

        .styled-table thead th,
        .styled-table tbody td {
            padding: 12px 15px;
            font-size: 0.9em;
        }
    }
</style>
